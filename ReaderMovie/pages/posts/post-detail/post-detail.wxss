/* post-detail.wxss */

.content-container  {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.music {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top:180rpx;
  opacity: 0.6;
}

.post-author-container {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.post-avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.post-author {
  font-size: 30rpx;
  font-weight: 300;
  vertical-align: middle;
  margin-left: 20rpx;
  color: #666;
}

.post-publish {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.post-publish-time {
  font-size: 24rpx;
  vertical-align: middle;
  margin-left: 30rpx;
  color: #999;
}

.post-title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.seperator-container {
  margin-top:20rpx;
}

.seperator-container-image {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.seperator-container-image Image {
  width: 90rpx;
  height:90rpx;
}

.seperator-image {
  margin-left: 30rpx;
}

.seperator {
  height: 2rpx;
  width: 660rpx;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.content {
  color:#666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}